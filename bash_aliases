#bash aliases


alias edit=$EDITOR
alias ^L=clear #seems to be default anyway
alias ls='ls -FhG'
alias l=ls
alias sl=ls
alias lsl='ls ./*'
alias ll='ls -la'
alias m=less
alias mroe=less
alias emcas=emacs
alias up='cd ..'
alias clean='rm -f *~ *.out *.o *.pyc *.class *.gch'
alias clever=$EDITOR' ~/.bashrc;source ~/.bashrc'
alias si='svn propedit svn:ignore'
alias bm="pushd ."
alias b="cd --"

