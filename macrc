#mac specific stuff

#git
PATH+=:/usr/local/git/bin

#python
export PYTHONPATH=/Library/Python/2.6/site-packages/

#ls colors
export CLICOLOR=1
export LSCOLORS="CxExCgDxbxeggebhbhhchc"

#mvim
alias gvim=mvim

#trash function
function trash () {
  local path
  for path in "$@"; do
    # ignore any arguments
    if [[ "$path" = -* ]]; then :
    else
      local dst=${path##*/}
      # append the time if necessary
      while [ -e ~/.Trash/"$dst" ]; do
        dst="$dst "$(date +%H-%M-%S)
      done
      mv "$path" ~/.Trash/"$dst"
    fi
  done
}


